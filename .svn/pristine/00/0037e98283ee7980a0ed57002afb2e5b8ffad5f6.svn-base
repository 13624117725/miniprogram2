/* pages/personalCenter/Maintenancelist/Maintenancelist.wxss */
.listContent {
  margin: auto;
  overflow-y: auto;
}
.listContent .listDiv{
  width: 94%;
  margin-left: 3%;
  box-shadow: #cccccc 0px 0px 30rpx;
  margin-top: 20rpx;
}
.listContent .listDiv .list_top{
  width: 94%;
  height: 80rpx;
  margin-left: 3%;
  border-bottom: 1rpx solid #ccc;
}
.listContent .listDiv .list_top>view:nth-child(1) {
    width: 75%;
    height: 100%;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #999999;
    text-align: left;
    float: left;
  }
  .listContent .listDiv .list_top>view:nth-child(2) {
   width: 25%;
   height: 100%;
   line-height: 80rpx;
   float: right;
   text-align: center;
   font-size: 28rpx;
   color: #999999;
  }
  .list_content {
    width: 94%;
    margin: 0 auto;
    height: auto;
  }
  .list_content_Info {
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
  }
  .list_content_info_img {
      flex: 1;
      background-size: 90%;
      background-repeat: no-repeat;
      background-position: center;
      margin-left:20rpx;
  }
  .list_content_infomation {
    flex: 4.5;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    width: 0;
  }
  .list_content_infomation>view{
    flex: 1;
    height: 75rpx;
  }
  .list_content_infomation>view:nth-child(1) {
    width: 100%;
    font-size: 32rpx;
    color: #000;
    line-height: 90rpx;
    text-align: left;
  }
  .list_content_infomation>view:nth-child(2) {
    width: 100%;
    font-size:28rpx;
    color: #999999;
    line-height:65rpx;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .list_bottom {
      width: 94%;
      height: 87rpx;
      margin-left: 3%;
      margin-bottom: 20rpx;
      border-top: 1rpx solid #ccc;
      position: relative;
  }
  .list_bottom>view:nth-child(1){
    width: 75%;
    height: 100%;
    line-height: 87rpx;
    font-size: 28rpx;
    color: #999999;
    text-align: left;
    float: left;
  }
  .list_bottom>view:nth-child(2){
   width: 25%;
   font-size: 28rpx;
   color: #fff;
   text-align: center;
   float: left;
   background: #999999;
  }
  .list_bottom_btn {
    width:140rpx;
    height: 52rpx;
    line-height: 52rpx;
    background: #999999;
    color: #fff;
    font-size: 24rpx;
    border: none;
    text-align: center;
    border-radius:5rpx;
    position: absolute;
    right:10rpx;
    top:17rpx; 
  }